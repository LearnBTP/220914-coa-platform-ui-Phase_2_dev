<core:FragmentDefinition 
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform"
	>
   <Dialog id="fileupload" contentHeight="30%" contentWidth="30%" draggable="true" class="zFileUpld sapUiSizeCompact" 
      title="Mass Update" horizontalScrolling="true" resizable="true" showHeader="true" type="Standard" verticalScrolling="true" afterClose=".onAfterDilogClose">

<content>
			<smartForm:SmartForm id="smartUpdateForm" entityType="" editable="true"
				class="sapUiResponsiveMargin zBorder zMassUpdateForm">
				<smartForm:Group id="CoreGroup">
                    <smartForm:GroupElement id="To_GHSite" label="To Site(GH)">
						<Input xmlns="sap.m" id="inptosite"/>
					</smartForm:GroupElement>
                    <smartForm:GroupElement id="To_Program" label="To Program">
						<Input xmlns="sap.m" id="inptoprogram" liveChange=".toCapital"/>
					</smartForm:GroupElement>
                    <smartForm:GroupElement id="Tp_Business_Grp" label="To Business Group">
						<Input xmlns="sap.m" id="inptobusiness" liveChange=".toCapital"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement id="Transfer_Flag" label="Transfer Flag">
						<Input xmlns="sap.m" id="inpTransfer_Flag"  ></Input>
					</smartForm:GroupElement>
					<smartForm:GroupElement id="Comments" label="Comment">
						<TextArea id="inpcomment"  ></TextArea>
					</smartForm:GroupElement>

					
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
        <beginButton>
			<Button xmlns="sap.m" text="Save" id="btnOK" press=".onMassUpdateAccept" type="Emphasized"/>
		</beginButton>
      <endButton>
      <Button id="btndialogclose" text="Close" type="Ghost" press="onCloseDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>