            <FlexBox height="50%" alignItems="Center" justifyContent="Center">
                <core:Icon color="white" size="8rem" src="sap-icon://sys-enter" class="sapUiSmallMarginTopBottom" />
            </FlexBox>
            <FlexBox height="50%" alignItems="End" justifyContent="Center" wrap="Wrap">
                <Text id="txtMsg"  class="successToastTxt sapUiSmallMargin" wrapping="true" />
